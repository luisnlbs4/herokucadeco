<%= form_with(model: sala, local: true) do |form| %>
  <% if sala.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(sala.errors.count, "error") %> prohibited this sala from being saved:</h2>

      <ul>
      <% sala.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label><strong>Nombre de la Sala :</strong></label>
    <%= form.text_field :nombre ,class: "form-control", :required => true ,placeholder: "example"%>
  </div>

  <div class="form-group">
    <label><strong>API Key :</strong></label>
    <%= form.text_field :apikey ,class: "form-control",  :required => true , placeholder: "example1234"%>
  </div>

  <div class="field">
    <label><strong>Session ID :</strong></label>
    <%= form.text_area :sessionID , class: "form-control", :rows => 4 , :required => true %>
  </div>

  <div class="form-group">
    <label><strong>Token :</strong></label>
    <%= form.text_area :token , class: "form-control", :rows => 4, :required => true %>
  </div>

  <div class="form-group">
    <label><strong>Cantidad de Minutos de la Sala :</strong></label>
    <%= form.number_field :minutos ,class: "form-control" , :value => 1800, :required => true %>
  </div>

  <div class="actions">
    <%= form.submit  "Guardar"  , class: "btn btn-success btn-block"%>
  </div>
<% end %>
